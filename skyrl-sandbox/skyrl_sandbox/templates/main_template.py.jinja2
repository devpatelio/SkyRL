"""Training entrypoint for {{ spec.env_name }} environment."""

import ray
from omegaconf import DictConfig
import hydra
from skyrl_gym import register
from skyrl_train.config.config_utils import initialize_ray, validate_cfg
from skyrl_train.config import config_dir
from skyrl_train.entrypoints.base_ppo_exp import BasePPOExp


@ray.remote(num_cpus=1)
def skyrl_entrypoint(cfg: DictConfig):
    """Ray entrypoint for training with {{ spec.env_name }} environment."""
    # Register the {{ spec.env_name }} environment
    # This needs to be done inside the entrypoint task
    register(
        id="{{ spec.env_name }}",
        entry_point="examples.{{ spec.env_name }}.env:{{ spec.env_name.capitalize() }}Env",
    )
    
    # Make sure that the training loop is not run on the head node
    exp = BasePPOExp(cfg)
    exp.run()


@hydra.main(config_path=config_dir, config_name="ppo_base_config", version_base=None)
def main(cfg: DictConfig) -> None:
    """Main training function."""
    # Validate the arguments
    validate_cfg(cfg)
    
    # Initialize Ray
    initialize_ray(cfg)
    ray.get(skyrl_entrypoint.remote(cfg))


if __name__ == "__main__":
    main()

